<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parper_play_status"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.xgj.livemi.view.ui.PlayOverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="改直播已经结束"
        android:textColor="@color/parper_yaoqing_text"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="喜欢该直播，不错过TA的任何直播"
        android:textColor="@color/parper_yaoqing_text"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_attention"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/account_yellow_bg"
        android:text="关注"
        android:textColor="@color/parper_play_status"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_white_bg"
        android:text="退出"
        android:textColor="@color/parper_play_status"
        android:textSize="20sp"
        />
</LinearLayout>
