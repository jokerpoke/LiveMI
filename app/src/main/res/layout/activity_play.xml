<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xgj.livemi.view.ui.PlayActivity">

    <FrameLayout
        android:id="@+id/fl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_bguser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3000">

            <ProgressBar
                android:id="@+id/pb_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pb_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="主播正在赶来..."/>
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <VideoView
            android:id="@+id/vv_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/iv_anchorInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#fa1"
            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_sendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_gift"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_sendmessage"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_privateLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_round"/>


        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher"/>


        <com.alibaba.view.BubblingView
            android:id="@+id/bubbling_view"
            android:layout_width="100dp"
            android:layout_height="350dp"
            android:layout_above="@id/iv_zan"
            android:layout_alignParentRight="true"
            />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/rl_message_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#ccc">

            <ImageView
                android:id="@+id/iv_hide_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/iv_isShow_tanmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_hide_input"
                android:src="@mipmap/ic_launcher"/>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="4"
                android:paddingLeft="2dp"
                android:background="@drawable/play_et_bg"
                android:hint="跟主播聊什么?"
                android:imeOptions="actionDone"
                android:inputType="text"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/play_bg_send_text"
                android:gravity="center"
                android:padding="10dp"
                android:text="发送"
                android:textColor="#fff"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
