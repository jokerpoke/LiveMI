<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parper_play_status"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.xgj.livemi.view.ui.ParperPlayActivity">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/ic_launcher"/>

    <EditText
        android:id="@+id/et_input_title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="想要直播些什么..."
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColor="@color/parper_yaoqing_text"
        android:textColorHint="#ccc"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="邀请朋友捧场"
        android:textColor="@color/parper_yaoqing_text"
        android:textSize="16sp"/>

    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/parper_yaoqing_text"/>

        <TextView
            android:id="@+id/tv_friends_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/parper_yaoqing_text"/>

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/parper_yaoqing_text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_startplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/account_yellow_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="开始直播"/>

</LinearLayout>
